<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/team_rank_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/default_rank"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            app:autoSizeTextType="uniform" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/team_name_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/default_name"
            android:textColor="@android:color/black"
            app:autoSizeTextType="uniform"/>

        <ImageView
            android:id="@+id/team_country_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:gravity="center_horizontal"
            android:contentDescription="Team country flag"
            android:text="@string/default_country"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/team_points_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/default_points"
            android:textColor="@android:color/black"
            app:autoSizeTextType="uniform"
            android:maxLines="1"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
