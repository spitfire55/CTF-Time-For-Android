<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimaryLight"
    android:layout_marginBottom="1dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/team_rank_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/default_rank"
            android:textAlignment="center"
            app:autoSizeMaxTextSize="48sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="4sp"
            app:autoSizeTextType="uniform" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/team_name_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/default_name"
            app:autoSizeMaxTextSize="48sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="4sp"
            app:autoSizeTextType="uniform" />

        <!-- <TextView
            android:id="@+id/team_country_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="@string/default_country"/>
        -->

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/team_points_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/default_points"
            app:autoSizeMaxTextSize="48sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="4sp"
            app:autoSizeTextType="uniform"
            android:maxLines="1"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
