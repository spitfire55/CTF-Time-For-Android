<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorSecondary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/actionbar_elevation">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/RankHeader"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:maxLines="1"
            android:text="@string/rank"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryLight"
            android:textStyle="bold"
            app:autoSizeStepGranularity="4sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/TeamNameHeader"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/TeamNameHeader"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:maxLines="1"
            android:text="@string/team_name"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryLight"
            android:textStyle="bold"
            app:autoSizeStepGranularity="4sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBaseline_toBaselineOf="@+id/RankHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/CountryFlagHeader"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintStart_toEndOf="@+id/RankHeader"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/CountryFlagHeader"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_alignBaseline="@id/RankHeader"
            android:maxLines="1"
            android:text="@string/Country"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryLight"
            android:textStyle="bold"
            app:autoSizeStepGranularity="4sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBaseline_toBaselineOf="@+id/RankHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/PointsTotalHeader"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@+id/TeamNameHeader"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/PointsTotalHeader"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:maxLines="1"
            android:text="@string/points"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryLight"
            android:textStyle="bold"
            app:autoSizeStepGranularity="4sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBaseline_toBaselineOf="@+id/RankHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@+id/CountryFlagHeader"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical"
        android:background="@color/colorSecondary">

        <ProgressBar
            android:id="@+id/progressBarRankingsBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="96dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/team_ranking_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>

        <android.support.v7.widget.CardView
            android:id="@+id/progressBarRankings"
            app:cardCornerRadius="18dp"
            app:contentPadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp">
            <ProgressBar
                android:indeterminate="true"
                android:indeterminateTint="@color/colorPrimary"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</LinearLayout>
